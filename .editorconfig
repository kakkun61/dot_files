[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.ps1]
charset = utf-8-bom
end_of_line = crlf

[.gitconfig, .gitmodules]
indent_style = tab

[Makefile*]
indent_style = tab

[*.nix]
indent_size = 2
tab_width = 2

[*/kana-rule.conf]
charset = unset

[*.json]
indent_size = 2
